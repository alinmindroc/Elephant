<!DOCTYPE html>
<html ng-app="app">

<head>
  <title>Projects</title>
  
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/projects.css">
  <link rel="stylesheet" href="/stylesheets/style.css"/>

  <script src="/javascripts/angular.min.js"></script>
  <script src="/javascripts/angular-animate.js"></script>
  <script src="/javascripts/ui-bootstrap-tpls-0.14.3.js"></script>

  <script src="/javascripts/angular-route.min.js"></script>
  <script src="/javascripts/angular-resource.min.js"></script>

  <script src="/javascripts/controllers/projects.js"></script>
  <script src="/javascripts/controllers/projectDetailsCtrl.js"></script>
  <script src="/javascripts/controllers/addTaskCtrl.js"></script>
</head>

<body>
  <div ng-controller="projectCtrl">
    <div class="header">
      <img src="/images/elephant.png" class="elephant">
      <form>
        <input ng-model="searchFilter" type="text" placeholder="Search for project..." class="search" ng-change=filterTableData()>
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
      </form>
      <img src="/images/profile_pic.png" class="userPic">
      <a href="/profile" class="fullName-header">{{fullName}}</a>
      <a href="/notifications" class="notifications">Notifications</a>
      <img src="/images/icon_notifications.png" class="notificationsPic">
      <div id="speech-bubble"></div>
      <p class="notNumber">{{notNumber}}</p>
      <a href="/projects" class="projects">Projects</a>
    </div>

    <div class="content">
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Projects</div>

        <!-- Table -->
        <table class="table table-striped table-hover table-bordered">
          <tr class="clickable" ng-repeat="project in shownProjects" ng-click="openProjectModal(project._id)">
            <td class="projectTd">{{project.name}}</td>
            <td>{{project.status}}</td>
            <td>{{project.start_date}}</td>
            <td><button class="btn btn-danger" ng-click="delete(project._id)">delete</button></td>
          </tr>
        </table>
      </div>
      <h3 style="color:red">de adaugat useri la proiecte</h3>
      <h3 style="color:red">de pus are you sure la delete: all task tree</h3>

      <nav class="navbar navbar-default">
        <form class="navbar-form navbar-left">
          <div class="form-group">
            <label class="sr-only">Project Name</label>
            <input class="form-control" id="project-name" ng-model="projectName" placeholder="Project Name">
          </div>
          <div class="form-group">
            <label class="sr-only">Status</label>
            <select placeholder="Status" class="form-control" ng-model="projectStatus">
              <option>in progress</option>
              <option>completed</option>
              <option>failed</option>
            </select>
          </div>
          <div class="form-group">
            <label class="sr-only">Start Date</label>
            <input class="form-control" type="date" id="project-date" ng-model="projectDate" placeholder="Start Date">
          </div>
          <button type="submit" class="btn btn-primary" ng-click="addProject()">Add Project</button>
        </form>
      </nav>
    </div>
  </div>
</body>
</html>