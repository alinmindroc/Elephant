<html>
<head>
	<title>Elefant</title>
	<link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
	<link rel="stylesheet" href="/stylesheets/style.css">

	<script src="/javascripts/angular.min.js"></script>
	<script src="/javascripts/angular-resource.min.js"></script>
	<script src="/javascripts/angular-route.min.js"></script>
	<script src="/javascripts/angular-animate.js"></script>

	<script src="/javascripts/ui-bootstrap-tpls-0.14.3.js"></script>

	<script src="/javascripts/controllers/indexCtrl.js"></script>
	<script src="/javascripts/controllers/profileCtrl.js"></script>
	<script src="/javascripts/controllers/projectsCtrl.js"></script>
	<script src="/javascripts/controllers/loginCtrl.js"></script>
	<script src="/javascripts/controllers/notificationsCtrl.js"></script>
	<script src="/javascripts/controllers/signupCtrl.js"></script>
	<script src="/javascripts/controllers/tasksCtrl.js"></script>

	<script src="/javascripts/controllers/modals/addTaskCtrl.js"></script>
	<script src="/javascripts/controllers/modals/projectDetailsCtrl.js"></script>
</head>
<body ng-app="taskManagerApp" ng-controller="indexCtrl">
	<div class="header" ng-show="currentController!='login' && currentController!='signup'">
		<img src="/images/elephant.png" class="header_logo">

		<div style="float: right">
			<img src="/images/profile_pic.png" class="header_profilePic">
			<a href="#/profile" class="header_nameURL">{{fullName}}</a>

			<a href="#/notifications">Notifications ({{notificationsNumber}})</a>
			<img src="/images/icon_notifications.png" class="header_notificationsPic">

			<a href="#/projects" class="header_projectsURL">Projects</a>
		</div>
	</div>

	<div ng-view=""></div>
</body>
</html>
