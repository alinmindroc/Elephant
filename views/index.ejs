	<link rel="icon" type="img/ico" href="favicon.ico">
</head>
<body ng-app="taskManagerApp" ng-controller="indexCtrl">
	<div class="header" ng-show="currentController!='login' && currentController!='signup'">
		<div class="col-md-1">
			<img src="/images/elephant.png" class="header_logo">
		</div>
		<div class="col-md-11">
			<div class="pull-right">
				<a href="#/profile">
					<img
					ng-src="{{loggedUser.picturePath ? loggedUser.picturePath : 'images/default_profile.png'}}"
					class="header_profilePic">
					{{loggedUser.fullName}}
					<a href="#/login" ng-click="logOut()" style="margin-left: 10px; font-size: 15px">(Log Out)</a>
				</a>
			</div>
		</div>
	</div>

	<div ng-view=""></div>
</body>
</html>
